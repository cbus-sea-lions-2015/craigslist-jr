<h1><%= @category.name %></h1>

<% @articles.each do |article| %>
  <div>
    <p><%= link_to article.title, category_article_path(@category,article) %> | <%= article.price %></p>
    <p><%= article.created_at.strftime("%a %B %e %Y") %></p>
    <p><%= article.author.username %></p>
    <p><%= article.description %></p>
  </div>
<% end %>
