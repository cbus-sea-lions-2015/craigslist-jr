<% if current_user == @article.author %>
  <%= button_to "Edit", edit_article_path(@article), method: "get" %>
  <%= button_to "Delete", @article, method: :delete, data: {confirm: "Are you sure?" }%>
<% end %>

<h1><%= @article.title %> | <%= @article.category.name %></h1>
  <h3><%= @article.author.username %></h3>
  <h3><%= @article.created_at.strftime("%a %B %e %Y") %></h3>

  <p><%= @article.description %></p>

