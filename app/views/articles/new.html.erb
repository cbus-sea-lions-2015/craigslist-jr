<h1> Create New Article </h1>
<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_from_collection_for_select(@categories, "id", "name") %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
